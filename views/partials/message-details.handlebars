{{#unless is_this_user}}
<div class="row username-div"></div>
    <p class="message-username">{{User.username}} </p>
</div>
{{/unless}}

<div class="row message-div">
{{#if is_this_user}}
    
    <div class="col message this-user this-user-bottom">
        <p class="message-text">{{text}}</p>
    </div>
{{else}}
    <div class="col message other-user other-user-bottom">
        <p class="message-text">{{text}}</p>
    </div>
{{/if}}

</div>