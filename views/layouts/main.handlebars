<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    {{!-- <link rel="stylesheet" href="/css/style.css"></script> not included yet --}}
    <script src="/socket.io/socket.io.js"></script>
    <title>Chatorama</title>
  </head>
  <body>
    <!-- main-header: orange background-->
    <div class="main-header">
      <header class="container">
        <!-- main-title: red background -->
        <div class="row justify-content-center py-2 main-title">
          <h1>Chatorama</h1>
        </div> 
      
        <!-- rm navbar-light and bg-light to add custom navbar colors -->
        <nav class="row justify-space-around navbar navbar-expand-lg navbar-light bg-light">
            <!-- Add gray background to navbar-item-->
            <div class="navbar-nav">
              <a class="nav-item nav-link" href="/">Home</a>
              {{#if logged_in}}
              <a class="nav-item nav-link" href="/profile">Profile</a>
              <button id="logout" class="nav-item nav-link">Logout</button>
              {{else}}
              <a class="nav-item nav-link" href="/login">Login</a>
              <a class="nav-item nav-link" href="/signup">Sign up</a>
              {{/if}}
            </div>
        </nav>
      </header>
    </div>
    
    <!-- Add default background color -->
    <main class="container container-fluid mt-2">
        {{{body}}}
    </main>

    <footer
      class="main-footer"
    >
      <p class="content has-text-centered p-4 m-2">
        Copyright &copy; 2022 by Chatorama.
      </p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
    
    
  </body>
</html>